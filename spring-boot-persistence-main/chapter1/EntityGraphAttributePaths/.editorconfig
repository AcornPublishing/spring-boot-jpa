# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# Remote any whitespace characters preceding newline character
trim_trailing_whitespace = true

# Default indent style
indent_style = space
indent_size = 4

# Java default style
[*.java]
indent_style = space
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2
